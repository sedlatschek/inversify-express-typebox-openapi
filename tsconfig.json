{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2021",
    "lib": ["ES6", "DOM"],
    "types": ["reflect-metadata"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["tests", "dist", "node_modules"]
}
